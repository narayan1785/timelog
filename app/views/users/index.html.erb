
  <div class="container">
     
     <%= form_tag users_path, method: :post, class: "form-signin" do %>
     <h2 class="form-signin-heading">Enter Username</h2>

       <%= text_field_tag 'user_name','' ,class: "form-control" %>
        <br/>
       <%=submit_tag "Sign In", class: "btn btn-lg btn-primary btn-block" %>
       <br/>
       <%= link_to 'Back to Login', root_path, :class => 'btn btn-success' %>
     <%end%>
      
  </div>
 