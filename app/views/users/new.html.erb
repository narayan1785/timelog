
<%= form_for @user, method: :post, html: { class: "form-signin" } do |f| %>
  <%= render partial:  'shared/error_block', locals: { obj: @user } %>
  <h2 class="form-signin-heading">Sign Up</h2>
  <%= f.text_field :username, class: "form-control", placeholder: 'Enter Username to register' %>
  <br/>
  <%=submit_tag "Sign Up", class: "btn btn-lg btn-primary btn-block" %>
     <br/>
       <%= link_to 'Back to Login', root_path, :class => 'btn btn-success' %>
<%end%>
     